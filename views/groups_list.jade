extends layout

block content
	h1= title
	p Here are all groups. 
		a(href='#new') New group
	table
		thead
			th Group
			th Slug
		each group in groups
			tr
				td.group
					a(href=group.url.view)
						strong=group.name
				td.slug=group.slug
	form#new(method='POST',action=process.env.base_url + '/groups/new')
		h2 New Group
		
		label(for='name') Name
		input#name(type='text',name='name')
		
		label(for='slug') Slug
		input#slug(type='text',name='slug')
				
		input(type='submit')